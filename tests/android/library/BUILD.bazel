load("@grab_bazel_common//rules:defs.bzl", "android_unit_test")
load("@io_bazel_rules_kotlin//kotlin:android.bzl", "kt_android_library")

kt_android_library(
    name = "android_library_sample",
    srcs = glob([
        "src/main/java/**/*.kt",
    ]),
    custom_package = "com.grab.test.lib",
    enable_data_binding = True,
    manifest = "src/main/AndroidManifest.xml",
    resource_files = glob(["src/main/res/**"]),
    visibility = [
        "//visibility:public",
    ],
    deps = [
        "//:parcelize",
        "@bazel_common_maven//:com_google_android_material_material",
        "@maven//:androidx_annotation_annotation",
        "@maven//:androidx_appcompat_appcompat",
        "@maven//:androidx_databinding_databinding_adapters",
        "@maven//:androidx_databinding_databinding_common",
        "@maven//:androidx_databinding_databinding_runtime",
        "@maven//:androidx_databinding_viewbinding",
    ],
)

android_unit_test(
    name = "android_library_sample_unit_test",
    srcs = glob([
        "src/test/java/**/*.kt",
    ]),
    associates = [
        ":android_library_sample_kt",
    ],
    deps = [
        ":android_library_sample",
        "@maven//:junit_junit",
        "@maven//:org_json_json",
    ],
)
