load("@grab_bazel_common//rules:defs.bzl", "android_binary", "android_unit_test")

android_binary(
    name = "android_binary_sample",
    srcs = glob([
        "src/main/java/**/*.kt",
    ]),
    crunch_png = False,
    custom_package = "com.grab.test",
    enable_data_binding = True,
    incremental_dexing = True,
    lint_options = {
        "enabled": True,
        "baseline": "lint_baseline.xml",
        "lint_checks": ["//tests/android/custom-lint-rules"],
    },
    manifest = "src/main/AndroidManifest.xml",
    manifest_values = {
        "versionCode": "1",
        "versionName": "1.0",
        "minSdkVersion": "24",
        "targetSdkVersion": "31",
        "applicationId": "com.grab.test",
        "orientation": "portrait",
    },
    min_sdk_version = 0,  # https://github.com/bazelbuild/bazel/commit/84861027d3f94ce6fc0bcf25ebbb787d6be8567a did not make it to 7.x version
    multidex = "native",
    resource_configuration_filters = [
        "en",
        "id",
        "in",
        "km",
        "ms",
        "my",
        "th",
        "vi",
        "zh",
        "ko",
        "ja",
    ],
    resource_sets = {
        "flavor": {
            "res": "src/flavor/res",
            "manifest": "src/flavor/AndroidManifest.xml",
            "assets": "src/flavor/assets",
        },
        "main": {
            "res": "src/main/res",
            "manifest": "src/main/AndroidManifest.xml",
            "assets": "src/main/assets",
        },
    },
    deps = [
        "//:parcelize",
        "//tests/android/library:android_library_sample",
        "@bazel_common_maven//:com_google_android_material_material",
    ],
)

android_unit_test(
    name = "android_binary_sample_unit_test",
    srcs = glob([
        "src/test/java/**/*.kt",
    ]),
    associates = [
        ":lib_android_binary_sample_kt",
    ],
    deps = [
        ":android_binary_sample",
        "@maven//:junit_junit",
        "@maven//:org_json_json",
    ],
)
